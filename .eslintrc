{
  "extends": ["react-app", "prettier"],
  "plugins": ["jest"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-globals": ["error", "event"],
    "no-constant-condition": "off",
    "linebreak-style": ["error", "unix"],
    "no-debugger": "off",
    "@typescript-eslint/no-var-requires": "off"
  },
  "settings": {
    "react": {
      "version": "17.0"
    }
  }
}
