{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-globals": ["error", "event"],
    "no-constant-condition": "off",
    "linebreak-style": ["error", "unix"],
    "no-debugger": "off"
  }
}
